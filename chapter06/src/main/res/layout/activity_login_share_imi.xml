<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imi_gp_login"
        android:orientation="horizontal"
        android:layout_margin="20dp" >

        <RadioButton
            android:id="@+id/imi_lg_by_passwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="密码登录"
            android:textSize="17sp"/>
        <RadioButton
            android:id="@+id/imi_lg_by_verfy_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:text="验证码登录"
            android:textSize="17sp"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号码："
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/ed_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:gravity="left|center"
            android:hint="请输入手机号码"
            android:textSize="17sp"
            android:maxLength="11"
            android:layout_toRightOf="@+id/tv_phone_number"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录密码："
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_password">

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:inputType="numberPassword"
                android:gravity="left|center"
                android:hint="请输入密码"
                android:maxLength="6"
                android:textSize="17sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/forget_sent_btn"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:textSize="17sp"/>

        </RelativeLayout>

    </RelativeLayout>


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:id="@+id/remember_password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:textSize="17sp"
            android:background="#DDFFE7"
            android:gravity="center"
            android:id="@+id/imi_login"/>

    </LinearLayout>


</LinearLayout>